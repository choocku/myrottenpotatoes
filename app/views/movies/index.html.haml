-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th= link_to "Movie Title", order_movie_path("title")
      %th= link_to "Rating", order_movie_path("rating")
      %th= link_to "Release Date", order_movie_path("release_date")
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr{:class => ('adult' unless movie.rating =~ /^G|PG$/)}
        %td= movie.title
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)
= link_to 'Add new movie', new_movie_path
